<Project>

    <PropertyGroup>
      <UsePublicApiAnalyzers>true</UsePublicApiAnalyzers>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Condition="'$(UsePublicApiAnalyzers)' == 'true'" Include="Microsoft.CodeAnalysis.PublicApiAnalyzers" Version="3.11.0-beta1.24324.1">
        <PrivateAssets>all</PrivateAssets>
        <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      </PackageReference>
    </ItemGroup>
  
</Project>
